{% extends 'base.html.twig' %}
{% block body %}
<section class="content">
      <div class="row" style="margin-right: -25px;margin-left: 207px;">
        <!-- left column -->
        <div class="col-md-12">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">用户添加</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="post" action="{{ path('user_add') }}">
              <div class="box-body">
                <div class="form-group">
                  <label for="user_name">*账号</label>
                  <input type="text" class="form-control input_in_line" id="user_name" placeholder="登录账号" name="name">
                </div>
                <div class="form-group">
                  <label for="password">*密码</label>
                  <input type="password" class="form-control input_in_line" id="password" placeholder="登录密码" name="passwd">
                </div>
                <div class="form-group">
                  <label for="password2">*重复密码</label>
                  <input type="password" class="form-control input_in_line" id="password2" placeholder="重复登录密码" name="passwd2" style="margin-left: 23px;">
                </div>
                <div class="form-group">
                  <label for="nick_name">*昵称</label>
                  <input type="text" class="form-control input_in_line" id="nick_name" placeholder="管理员昵称" name="nick_name">
                </div>
                <div class="form-group">
                  <label for="email">*email</label>
                  <input type="email" class="form-control input_in_line" id="email" placeholder="请输入电子邮箱" name="email" style="margin-left: 45px;">
                </div>
                <div class="form-group">
                  <label for="sex" style="margin-right: 30px;">性别</label>
                  <div class="radio show_in_line" style="margin-left: 30px;">
                    <label>
                      <input type="radio" name="sex" id="optionsRadios1" value="男" >
                      男
                    </label>
                  </div>
                  <div class="radio show_in_line">
                    <label>
                      <input type="radio" name="sex" id="optionsRadios2" value="女">
                      女
                    </label>
                  </div>
                  <div class="radio show_in_line">
                    <label>
                      <input type="radio" name="sex" id="optionsRadios3" value="保密" checked>
                      保密
                    </label>
                  </div>

                </div>
                <div class="form-group">
                  <label for="phone">移动电话</label>
                  <input type="text" class="form-control input_in_line" id="phone" placeholder="移动电话" name="phone" style="margin-left: 30px;">
                </div>

                <div class="form-group">
                  <label for="qq">QQ</label>
                  <input type="text" class="form-control input_in_line" id="qq" placeholder="QQ" name="qq" style="margin-left: 67px;">
                </div>

              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary form_submit">Submit</button>
              </div>
            </form>
          </div>
          <!-- /.box -->
        </div>
        <!--/.col (left) -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
    <div class="pull-right hidden-xs">
      <b>Version</b> 2.3.3
